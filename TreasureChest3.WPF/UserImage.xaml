<UserControl x:Class="TreasureChest3.WPF.UserImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreasureChest3.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="372.5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <Image Source="/Resources/Backgrounds/TheLadder1920x1200.jpg" Stretch="UniformToFill" Margin="2,2,2,2">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Menu item 1" />
                        <MenuItem Header="Menu item 2" />
                        <Separator />
                        <MenuItem Header="Menu item 3" />
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </Border>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <ScrollBar Grid.Row="1" Height="Auto" Width="Auto" Orientation="Horizontal" Margin="2,2,2,2"/>
        </Border>
    </Grid>
</UserControl>
